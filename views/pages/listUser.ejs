<div class="container">
    <% if (deleteErrorMessage) { %>
        <div class="alert alert-danger m-0" role="alert">
            <i class="fas fa-times-circle"></i> <%= deleteErrorMessage %>
        </div>
    <% } %>

    <% if (deleteSuccessMessage) { %>
        <div class="alert alert-success m-0" role="alert">
            <%= deleteSuccessMessage %>
        </div>
        <script>
            setTimeout(() => {
                window.location.href = '/detail-user/<%= user.username %>';
            }, 1000);
        </script>
    <% } %>
    <table class="table table-light table-striped table-bordered border-secondary caption-top">
        <caption>Danh sách tài khoản</caption>
        <thead class="text-center">
            <tr>
                <th>STT</th>
                <th>Tên</th>
                <th>Tài khoản</th>
                <th>Giới tính</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Quyền</th>
                <th>Cấu hình</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>
                <tr>
                    <td><%= offset + index + 1 %></td>
                    <td><%= user.fullname %></td> 
                    <td><%= user.username %></td> 
                    <td><%= user.sex %></td>
                    <td><%= user.email %></td>
                    <td><%= user.address %></td>
                    <td><%= user.groupid %></td>
                    <td>
                        <a href="/detail-user/<%= user.username %>" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="/edit-user/<%= user.username %>" class="btn btn-outline-primary">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="javascript:void(0)" class="btn btn-outline-danger" onclick="showMessage('<%= user.username %>')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <%- include ('./pagination') %>
</div>
