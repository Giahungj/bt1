<div class="container w-50 my-3">
    <h2  class="mb-3">Thông tin người dùng <%= user.fullname %></h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Thông tin</th>
                <th>Giá trị</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Họ và tên</strong></td>
                <td><%= user.fullname %></td>
            </tr>
            <tr>
                <td><strong>Tài khoản</strong></td>
                <td><%= user.username %></td>
            </tr>
            <tr>
                <td><strong>Giới tính</strong></td>
                <td><%= user.sex %></td>
            </tr>
            <tr>
                <td><strong>Email</strong></td>
                <td><%= user.email %></td>
            </tr>
            <tr>
                <td><strong>Địa chỉ</strong></td>
                <td><%= user.address %></td>
            </tr>
            <tr>
                <td><strong>Quyền</strong></td>
                <td><%= user.groupid %></td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
        <% if (roleSession === 'Admin') { %>
            <a href="/list-user" class="btn btn-secondary mx-2">Quay lại danh sách</a>
        <% } %>
        
        <a href="/edit-user/<%= user.username %>" class="btn btn-outline-primary mx-2">
            <i class="fas fa-pencil-alt"></i> Chỉnh sửa
        </a>
        
        <a href="/delete-user/<%= user.username %>" class="btn btn-outline-danger mx-2">
            <i class="fas fa-trash"></i> Xóa
        </a>
    </div>
</div>
