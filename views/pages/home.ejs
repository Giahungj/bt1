<h2>Trang chủ</h2>
<p>Đây là nội dung chính của trang chủ.</p>
<div class="container">
    <div class="row">
        <% users.forEach(user => { %>
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img src="/images/userimages.png" class="card-img-top" alt="<%= user.username %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= user.username %></h5>
                        <p class="card-text"><%= user.fullname %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/detail-user/<%= user.username %>" class="btn btn-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
