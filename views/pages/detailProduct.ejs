<div class="container w-50 my-3">
    <h2  class="mb-3">Thông tin sản phẩm</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Thông tin</th>
                <th>Giá trị</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Tên sản phẩm</strong></td>
                <td><%= product.name %></td>
            </tr>
            <tr>
                <td><strong>Mô tả</strong></td>
                <td><%= product.description %></td>
            </tr>
            <tr>
                <td><strong>Giá</strong></td>
                <td><%= product.price %></td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
        <% if (roleSession === 'Admin') { %>
            <a href="/list-product" class="btn btn-secondary mx-2">Quay lại danh sách</a>
        <% } %>
        
        <a href="/edit-product/<%= product.name %>" class="btn btn-outline-primary mx-2">
            <i class="fas fa-pencil-alt"></i> Chỉnh sửa
        </a>
        
        <a href="javascript:void(0)" class="btn btn-outline-danger" onclick="showMessageDelProduct('<%= product.name %>')">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>
